{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": "src",
    "lib": ["dom", "es2020"],
    "typeRoots": ["../../node_modules/@types", "node_modules/@types"],
    "target": "esnext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "esnext",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "noEmitOnError": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "node_modules",
    "lib/",
    "test-utility/",
    "fixtures/",
    "stories/",
    "**/*.stories.tsx",
    "__tests__/",
    "npm"
  ],
  "references": [
    // { "path": "../SERVICE_NAME" }
  ]
}
