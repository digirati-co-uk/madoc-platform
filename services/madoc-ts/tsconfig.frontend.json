{
  "compilerOptions": {
    "baseUrl": "src",
    "lib": ["dom", "es2020"],
    "typeRoots": ["../../node_modules/@types", "node_modules/@types"],
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "es2015",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "noEmitOnError": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "downlevelIteration": true,
    "noUnusedLocals": false,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "lib/",
    "**/*.stories.tsx",
    "__tests__/"
  ],
  "references": [
    // { "path": "../SERVICE_NAME" }
  ]
}
