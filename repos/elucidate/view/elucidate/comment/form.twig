{% if (form) %}
    <div class="c-form">
        {% if formLabel %}
            <h3 class="h4">{{ translate('Join the conversation') }}?</h3>
        {% else %}
            <h3 class="h4">{{ formLabel }}?</h3>
        {% endif %}
        {{ form(form) }}
        <div class="c-form__content">
            {{ content|raw }}
        </div>
    </div>
{% endif %}
